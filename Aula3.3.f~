c 

	program aulaTres
	integer i
	real*4 simples1,simples2, x1 , x2
	real*8 dupla1,dupla2

	x1 = 0,5D0
	x2 = 0,1D0

	simples1 = 0D0
	dupla1 = 0D0

	simples2 = 0D0
	dupla2 = 0D0

	do i = 0, 3000-1

		simples1 = simples1 + x1
		simples2 = simples1 + x2
		dupla1 = dupla1 + x1 
		dupla2 = dupla2 + x2
		i = i+1
	end do 

	print *,simples1
	print *,simples2
	print *,dupla1
	print *,dupla2
	
	end program 
